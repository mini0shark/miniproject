<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chinsa.miniproject.dao.ProductMapper">

	<select id="getProduct" parameterType="java.lang.Integer"
		resultType="productDTO">
		SELECT p_no,p_name,p_price,p_info,p_loc,p_img,p_seller,p_state,p_category FROM product WHERE p_no = #{pNo}
	</select>

</mapper>